        <div class="app-logowithinfo">
            <img class="logowithinfoimg" src="/logowithinfo.jpeg" alt="">
            <img class="home-delivery" src="/delivery.jpeg" alt="Home Delivery">
        </div>
        <div class="app-customercare">
            <img src="/customercare.jpeg" alt="">
        </div>

        <div class="app-download">
            <a href="https://play.google.com/store/apps/details?id=com.freshvegie" target="_blank"><img src="https://play.google.com/intl/en_us/badges/images/generic/en_badge_web_generic.png" alt="Get it on Google Play"></a>
        </div>
    </div>

    <div class="vegetable-decorations">
        <img src="/pepper.jpeg" class="veg-pepper" alt="" >
        <img src="/carrot.jpeg" alt="" class="veg-carrot" >
        <img src="/eggplant.jpeg" alt="" class="veg-eggplant" >
